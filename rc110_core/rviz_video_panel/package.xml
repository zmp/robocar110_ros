<?xml version="1.0"?>
<package format="2">
  <name>rviz_video_panel</name>
  <version>2.0.0</version>
  <description>RViz panel to play video streams</description>
  <maintainer email="izac@zmp.co.jp">IZAC</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <build_depend>qtbase5-dev</build_depend>
  <build_depend>qtmultimedia5-dev</build_depend>

  <depend>rviz2</depend>

  <exec_depend>libqt5-core</exec_depend>
  <exec_depend>libqt5-widgets</exec_depend>
  <exec_depend>libqt5-multimedia</exec_depend>
  <exec_depend>libqt5multimedia5-plugins</exec_depend>

  <export>
    <rviz plugin="${prefix}/plugin_description.xml"/>
    <build_type>ament_cmake</build_type>
  </export>
</package>
