<?xml version="1.0"?>
<package format="2">
  <name>rc110_gazebo</name>
  <version>2.0.0</version>
  <description>RoboCar 1/10 simulation using Gazebo.</description>
  <maintainer email="izac@zmp.co.jp">IZAC</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <depend>builtin_interfaces</depend>
  <depend>rclcpp</depend>
  <depend>rosidl_default_generators</depend>
  <depend>sensor_msgs</depend>
  <depend>std_srvs</depend>
  <depend>geometry_msgs</depend>
  <depend>sensor__msgs</depend>
  <depend>ackermann_msgs</depend>
  <exec_depend>gazebo_ros</exec_depend>
  <exec_depend>gazebo_plugins</exec_depend>

  <depend>rc110_msgs</depend>
  <exec_depend>rc110</exec_depend>
  <exec_depend>rc110_teleop</exec_depend>

  <export>
    <gazebo_ros gazebo_model_path="${prefix}/../../rc110_core/rc110/models"/>
    <gazebo_ros gazebo_media_path="${prefix}"/>
    <build_type>ament_cmake</build_type>
  </export>
</package>